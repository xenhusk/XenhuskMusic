<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="?attr/colorSurfaceContainerHighest" />
            <stroke 
                android:width="1dp" 
                android:color="?attr/colorOutlineVariant" />
        </shape>
    </item>
    
    <!-- Water fill effect -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp" />
                <gradient
                    android:type="linear"
                    android:angle="270"
                    android:startColor="#4FC3F7"
                    android:centerColor="#29B6F6"
                    android:endColor="#0288D1"
                    android:centerX="0.5"
                    android:centerY="0.3" />
            </shape>
        </clip>
    </item>
    
    <!-- Water shimmer effect -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp" />
                <gradient
                    android:type="linear"
                    android:angle="45"
                    android:startColor="#80FFFFFF"
                    android:centerColor="#40FFFFFF"
                    android:endColor="#20FFFFFF"
                    android:centerX="0.2"
                    android:centerY="0.4" />
            </shape>
        </clip>
    </item>
    
</layer-list>
