<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Booming.DynamicColors" parent="@style/Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/MaterialPopupMenuStyle</item>
        <item name="popupWindowStyle">@style/MaterialPopupMenuStyle</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.Booming.Adaptive</item>
        <item name="roundSelector">@drawable/round_selector</item>
        <item name="rectSelector">@drawable/rect_selector</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="sliderStyle">@style/SliderStyle</item>
        <item name="popupMenuBackground">@drawable/popupmenu_background</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionBarSize">@dimen/toolbar_height</item>
        <item name="homeAsUpIndicator">@drawable/ic_back_24dp</item>
        <item name="defaultFooterColor">@color/material_dynamic_neutral_variant10</item>
    </style>

    <style name="Theme.Booming.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/avd_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="Theme.AppWidget" parent="@style/Theme.Material3.DynamicColors.DayNight"/>

    <style name="ThemeOverlay.Booming.Adaptive" parent="ThemeOverlay.Material3.Light"/>

</resources>